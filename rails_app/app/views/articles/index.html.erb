<h1> Listing Articles </h1>
<table>
    <tr>
        <td>Title</td>
        <td>Text</td>
    </tr>

    <% @articles.each do |a| %>
        <tr>
            <td><%= a.title %></td>
            <td><%= a.text %></td>
            <td><%= link_to "Show", article_path(a) %></td>
            <td><%= link_to "Edit", edit_article_path(a) %></td>
            <td><%= link_to "Destroy", article_path(a),method: :delete, data: { confirm: "are you sure you want to delete" } %></td>
        </tr>
    <% end %>
</table>
<%= link_to "My Blog",controller: 'articles' %>
